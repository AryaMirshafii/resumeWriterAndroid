<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loginScreen3"
    android:background="@drawable/lightblue"
    android:windowSoftInputMode="stateVisible"

    >


    <TextView
        android:id="@+id/emailLoginLabel"
        android:layout_width="wrap_content"
        android:layout_height="35dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:background="@color/clear"
        android:fontFamily="@font/hksemiboldlegacy"
        android:text="Please Enter Your Email Address"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/emailLoginEntry"
        android:layout_width="250dp"
        android:layout_height="35dp"


        android:layout_below="@+id/emailLoginLabel"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/hksemiboldlegacy"
        android:inputType="textEmailAddress"
        android:textSize="25dp" />






</RelativeLayout>