<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/experienceColor"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical"

    >

    <TextView
        android:id="@+id/experienceRole"
        android:layout_width="220dp"
        android:layout_height="35dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/hksemiboldlegacy"
        android:text="Hi Arya"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/startYear"
        android:layout_width="55dp"
        android:layout_height="35dp"

        android:layout_alignEnd="@+id/experienceDescription"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/experienceDescription"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"

        android:fontFamily="@font/hksemiboldlegacy"
        android:text="1897"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/experienceRole"


        />


    <TextView
        android:id="@+id/companyName"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/experienceRole"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/hksemiboldlegacy"
        android:text="Apple"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/experienceDescription"
        android:layout_width="320dp"
        android:layout_height="100dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/companyName"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/hkmediumlegacy"
        android:inputType="textMultiLine"
        android:text="Hi Arya"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/endYear"
        android:layout_width="55dp"
        android:layout_height="35dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/hksemiboldlegacy"
        android:text="1997"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold" />



</RelativeLayout>